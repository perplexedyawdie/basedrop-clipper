{
    "manifest_version": 3,
    "name": "CRXJS React Vite Example",
    "version": "1.0.0",
    "action": { "default_popup": "index.html" },
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
      },
      "content_scripts": [
        {
          "js": ["src/content.tsx"],
          "matches": ["https://*/*","https://*/","http://*/*","http://*/"]
        }
      ],
      "permissions": [
        "activeTab"
      ],
      "background": {
        "service_worker": "src/background.ts",
        "type": "module"
      }
  }